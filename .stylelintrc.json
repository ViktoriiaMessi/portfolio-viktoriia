{
  "extends": ["stylelint-config-standard"],
  "rules": {
    "declaration-property-value-no-unknown": true,
    "color-function-notation": "legacy",
    "color-hex-length": "off",
    "alpha-value-notation": "off",
    "declaration-empty-line-before": "off",
    "declaration-property-value-no-unknown": "off",
    "declaration-block-no-duplicate-properties": "off",
    "shorthand-property-no-redundant-values": "off",
    "no-descending-specificity": "off",
    "no-duplicate-selectors": "off",
    "media-feature-range-notation": "off",
    "at-rule-empty-line-before": "off",
    "comment-empty-line-before": "off",
    "color-function-notation": "off"
  }
}
